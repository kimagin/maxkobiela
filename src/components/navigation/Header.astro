---
import Logo from '../assets/Logo.astro'
import Links from './Links.astro'
import CTA from './CTA.astro'
import Icon from 'astro-iconify'
---

<!-- Header on the main Page -->
<header
  x-show="!headerVisible"
  class="absolute z-50 w-full flex flex-col justify-center items-center py-24">
  <div
    class="mx-auto w-fit"
    id="main-logo">
    <Logo width={210} />
  </div>
  <nav
    class="absolute flex items-center w-fit right-24 text-white/70 space-x-4">
    <Links />
    <CTA content="Book a meeting" />
    <Icon
      class="h-8 mb-px"
      name="grommet-icons:sun"
    />
  </nav>
</header>

<!-- Header After Scrolling -->
<header
  x-show="headerVisible"
  x-ref="header"
  x-cloak
  x-transition:enter="transition ease-in-out duration-300"
  x-transition:leave="transition ease-in-out duration-200"
  x-transition:enter-start="opacity-0 -translate-y-20"
  x-transition:enter-end="opacity-100"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0 -translate-y-20"
  class="fixed z-50 w-full flex flex-col justify-center items-centero bg-stone-50/90 backdrop-blur-md py-6 opacity-0">
  <div class="mx-auto w-fit">
    <Logo
      dark
      width={140}
    />
  </div>
  <nav class="absolute flex items-center w-fit right-24">
    <Links />
  </nav>
</header>
