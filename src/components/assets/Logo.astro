---
export interface Props {
  src?: string
  alt?: string
  width?: number
  dark?: boolean
}

const srcDark = './images/logo-dark.svg'
const srcLight = './images/logo-light.svg'

const { src, alt, width = 140, dark = false } = Astro.props as Props
---

<a href="/">
  <span>
    <img
      src={dark ? srcDark : srcLight}
      {alt}
      {width}
    />
  </span>
</a>
